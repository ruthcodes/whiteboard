extends layout

block content
  .formContainer.container-fluid
    .row
      .form.col-md-12
        form(action='/register', method='post')
          .form-group
            input.form-control(autocomplete='off', autofocus='', name='username', placeholder='Username', type='text')
          .form-group
            input.form-control(name='password', placeholder='Password', type='password')
          .form-group
            input.form-control(name='confirm', placeholder='Confirm Password', type='text')
          button.btn.btn-primary(type='submit') Register
