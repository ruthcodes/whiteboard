extends layout

block content
  .formContainer.container-fluid
      .row
        .form.col-md-12.inner
          form(action='/change', method='post')
            .form-group
              input.form-control(autocomplete='off', autofocus='', name='username', placeholder='Username', type='text')
            .form-group
              input.form-control(name='oldPassword', placeholder='Old Password', type='text')
            .form-group
              input.form-control(name='newPassword', placeholder='New Password', type='password')
            .form-group
              input.form-control(name='confirmation', placeholder='Confirm New Password', type='password')
            button.btn.btn-primary(type='submit') Change Password
